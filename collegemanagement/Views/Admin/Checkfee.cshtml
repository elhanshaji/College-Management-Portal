@model List<DataAccessLayer.Model.checkfeesmodel>
@{
    ViewBag.Title = "Checkfee";
}

<style type="text/css">
    .l {
        padding: 10px;
        position: absolute;
        top: 25%;
        left: 35%;
        width: auto;
        height: auto;
        text-align: center;
        background-color: white;
        border-radius: 5px;
    }

    body {
        background-image: url("/image.jpg")
    }
</style>
<div class="l">
    @if (Model.Count() == 0)
    {
        <div style="text-align:center;margin:auto; background-color:lightgreen;padding:20px; border-radius:5px;">
            <span class=" text-danger">No fee defaulter exist to this batch/Data not available for this Batch</span>
        </div>

    }

@if (Model.Count() != 0)
{
    <table class="table  text-center  " align="center">
        <thead class="thead-dark">
            <tr>
                <th>Student Name</th>
                <th>Student ID</th>
                <th>Department</th>
                <th>Year</th>
                <th>Semester</th>
                <th>Amount to be paid</th>
            </tr>
        </thead>
        @foreach (var a in Model)
        {
            <tr scope="row">
                <td>@a.name</td>
                <td>@a.SID</td>
                <td>@a.branch</td>
                <td>@a.year</td>
                <td>@a.sem</td>
                <td class="text-danger">50,000</td>
            </tr>
        }
    </table>

    <hr />
}
  

</div>