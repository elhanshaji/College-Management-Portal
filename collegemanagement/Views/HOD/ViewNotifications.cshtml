@model List<DataAccessLayer.Model.NotifyList>
@{
    ViewBag.Title = "ViewNotifications";
}
<link rel="stylesheet" href="~/Content/displaystyle.css">
<div class="l">
    @if (Model.Count() == 0)
    {
        <div style="text-align:center;margin:auto; background-color:lightgreen;padding:20px; border-radius:5px;">
            <span class=" text-danger">No fee defaulter exist to this batch/Data not available for this Batch</span>
        </div>

    }

    @if (Model.Count() != 0)
    {
        <table class="table  text-center  " align="center">
            <thead class="thead-dark">
                <tr>
                    <th>From</th>
                    <th>Role</th>
                    <th>Date and Time</th>
                    <th>Message</th>
                </tr>
            </thead>
            @foreach (var a in Model)
            {
                <tr scope="row">
                    <td>@a.FromUser</td>
                    <td>@a.RoleName</td>
                    <td>@a.Date_Time</td>
                    <td>@a.Content</td>
                </tr>
            }
        </table>

        <hr />
    }


</div>

